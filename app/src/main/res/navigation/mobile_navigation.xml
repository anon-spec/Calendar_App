    app:startDestination="@+id/nav_calendar">

    <activity
        android:id="@+id/nav_calendar"
        android:name="com.example.calendarapp.ui.slideshow.calendarActivity"
        android:label="@string/menu_calendar"
        tools:layout="@layout/calendarlayout"
        />
    <activity
        android:id="@+id/nav_events"
        android:name="com.example.calendarapp.ui.home.EventActivity"
        android:label="@string/menu_events"
        tools:layout="@layout/fragment_events"
        />
    <activity
        android:id="@+id/nav_notifications"
        android:name="com.example.calendarapp.ui.gallery.notificationsActivity"
        android:label="@string/menu_notifications"
